    <!-- メモフィールド -->
    <EditText
        android:id="@+id/edit_note"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="メモ"
        android:inputType="text"
        />

</LinearLayout>
